{
  "name": "local-proxy-hub",
  "version": "0.1.6",
  "description": "A proxy hub for all the app/services running on same machine",
  "main": "./lib/server.js",
  "preferGlobal": true,
  "bin": {
    "lph": "./lib/program.js"
  },
  "scripts": {
    "preinstall": "npm install -g pm2",
    "start": "pm2 start ecosystem.config.js",
    "postinstall": "npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dibosh/local-proxy-hub.git"
  },
  "keywords": [
    "proxy",
    "reverse-proxy",
    "localhost",
    "nginx",
    "server"
  ],
  "author": "Munim Dibosh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dibosh/local-proxy-hub/issues"
  },
  "homepage": "https://github.com/dibosh/local-proxy-hub#readme",
  "dependencies": {
    "commander": "^2.17.1",
    "express": "^4.16.3",
    "http-proxy-middleware": "^0.19.0",
    "pm2": "^3.0.4",
    "shelljs": "^0.8.2"
  }
}
